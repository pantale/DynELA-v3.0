\begin_inset Formula 
\begin{equation}
\A=\overrightarrow{u}\otimes\overrightarrow{v}\equiv\overrightarrow{u}\overrightarrow{v}\label{eq:Dyadic-product}
\end{equation}

\end_inset

where the operator 
\begin_inset Formula $\otimes$
\end_inset

 denotes the tensor product.
 Then, we define a dyadic as a linear combination of dyads.
 Furthermore, as we will see later, any tensor can be represented by means
 of a linear combination of dyads.
 In matrix notation, the dyadic product is noted:
\begin_inset Formula 
\begin{equation}
\left[\overrightarrow{u}\otimes\overrightarrow{v}\right]=\left[\overrightarrow{u}\right]\left[\overrightarrow{v}\right]^{T}=\left[\begin{array}{c}
u_{1}\\
u_{2}\\
u_{3}
\end{array}\right]\left[\begin{array}{ccc}
v_{1} & v_{2} & v_{3}\end{array}\right]=\left[\begin{array}{ccc}
u_{1}v_{1} & u_{1}v_{2} & u_{1}v_{3}\\
u_{2}v_{1} & u_{2}v_{2} & u_{2}v_{3}\\
u_{3}v_{1} & u_{3}v_{2} & u_{3}v_{3}
\end{array}\right]
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The following properties of the dyadic product can be noted.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\overrightarrow{u}\otimes\overrightarrow{v}=\left(\overrightarrow{v}\otimes\overrightarrow{u}\right)^{T}\neq\overrightarrow{v}\otimes\overrightarrow{u}
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
\left(\overrightarrow{u}\otimes\overrightarrow{v}\right)\cdot\overrightarrow{w}=\overrightarrow{u}\otimes\left(\overrightarrow{v}\cdot\overrightarrow{w}\right)=\overrightarrow{u}\left(\overrightarrow{v}\cdot\overrightarrow{w}\right)=\left(\overrightarrow{v}\cdot\overrightarrow{w}\right)\overrightarrow{u}
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
\overrightarrow{u}\otimes\left(\alpha\overrightarrow{v}+\beta\overrightarrow{w}\right)=\alpha\overrightarrow{u}\otimes\overrightarrow{v}+\beta\overrightarrow{u}\otimes\overrightarrow{w}
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
\left(\overrightarrow{u}\otimes\overrightarrow{v}\right)\left(\overrightarrow{w}\otimes\overrightarrow{x}\right)=\left(\overrightarrow{u}\otimes\overrightarrow{x}\right)\left(\overrightarrow{v}\cdot\overrightarrow{w}\right)
\end{equation}

\end_inset


